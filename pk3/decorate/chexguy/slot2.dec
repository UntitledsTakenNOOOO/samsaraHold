actor "Large Zorcher" : Weapon
{
    Weapon.SelectionOrder 1300
    Weapon.SlotNumber 2
    Inventory.PickUpSound "chex/weaponget"
    Weapon.AmmoUse 1
    Weapon.AmmoGive 8
    Weapon.AmmoType "Shell"
    +BLOODLESSIMPACT
    +PUFFONACTORS
    //+AMMO_OPTIONAL
    +INVENTORY.UNDROPPABLE
    DamageType "Zorch"
    Inventory.PickupMessage "You got the Large Zorcher!"
    Obituary "%k \chsplayed\c- %o \chwith zorches all over.\c-"
    States
    {
      Ready:
        SHTC A 1 A_WeaponReady
        Loop

      Deselect:
        SHTC A 1 A_Lower
        Loop

      Select:
        SHTC A 1 A_Raise
        Loop

      Fire:
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"CoopFire")
        SHTC A 3
        SHTC A 0 A_FireBullets (4, 0, Random(7,8), 6, "ChexPuff")
        SHTC A 0 A_PlayWeaponSound ("chex/shotgf")
        SHTC A 6 A_GunFlash // 7
        SHTC BC 4 // 5
        SHTC D 4 // 4
        SHTC CB 4 // 5
        SHTC A 3 // 3
        SHTC A 5 A_ReFire // 7
        Goto Ready

      CoopFire:
      	SHTC A 0 A_Jump(128,"CoopFire2")
        SHTC A 3
        SHTC A 0 A_FireCustomMissile("ChexBullet",random(-100,100)/100.00,1,0,1)
        SHTC AA 0 A_FireCustomMissile("ChexBullet",random(-200,200)/100.00,0,0,1)
        SHTC AA 0 A_FireCustomMissile("ChexBullet",random(-300,300)/100.00,0,0,1)
        SHTC AA 0 A_FireCustomMissile("ChexBullet",random(-400,400)/100.00,0,0,1)
        SHTC A 0 A_PlayWeaponSound ("chex/shotgf")
        SHTC A 6 A_GunFlash // 7
        SHTC BC 4 // 5
        SHTC D 4 // 4
        SHTC CB 4 // 5
        SHTC A 3 // 3
        SHTC A 5 A_ReFire // 7
        Goto Ready

      CoopFire2:
        SHTC A 3
        SHTC A 0 A_FireCustomMissile("ChexBullet",random(-100,100)/100.00,1,0,1)
        SHTC A 0 A_FireCustomMissile("ChexBullet",random(-100,100)/100.00,0,0,1)
        SHTC AA 0 A_FireCustomMissile("ChexBullet",random(-200,200)/100.00,0,0,1)
        SHTC AA 0 A_FireCustomMissile("ChexBullet",random(-300,300)/100.00,0,0,1)
        SHTC AA 0 A_FireCustomMissile("ChexBullet",random(-400,400)/100.00,0,0,1)
        SHTC A 0 A_PlayWeaponSound ("chex/shotgf")
        SHTC A 6 A_GunFlash // 7
        SHTC BC 4 // 5
        SHTC D 4 // 4
        SHTC CB 4 // 5
        SHTC A 3 // 3
        SHTC A 5 A_ReFire // 7
        Goto Ready
        
      Flash:
        CSHT A 3 Bright A_Light1
        CSHT B 3 Bright A_Light2
        Goto LightDone

      Spawn:
        SHOC A -1
        Stop
    }
}
