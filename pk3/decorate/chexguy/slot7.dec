actor ChexLAZBall : BFGBall
{
    Damage 125
    DamageType "PhasingZorch"
    Decal None
    +BRIGHT
    +DONTREFLECT
	+NOEXTREMEDEATH
	+BLOODLESSIMPACT
    DeathSound "chex/bfgx"
    Obituary "%k \chkicked\c- %o\ch off to another dimension with the LAZ device.\c-"
    States
    {
      Spawn:
        CFS1 AB 4 bright
        loop
        
      Death:
	CFE1 A 4 bright A_Explode(100, 512, 0)
	CFE1 A 4 bright A_Explode(45, 384, 0)
	CFE1 B 4 bright A_Explode(25, 352, 0)
	CFE1 B 4 bright A_Explode(20, 320, 0)
        CFE1 C 8 bright A_BFGSpray("ChexLAZSplash")
	CFE1 D 4 bright A_Explode(53, 192, 0)
	CFE1 D 4 bright A_Explode(20, 160, 0)
	CFE1 E 4 bright A_Explode(32, 128, 0)
	CFE1 E 4 bright A_Explode(30, 96, 0)
	CFE1 F 4 bright A_Explode(35, 64, 0)
	CFE1 F 4 bright A_Explode(40, 32, 0)
        stop
    }
}

