	WallBounceFactor 0.9
    DeathSound "SpiritDie"
	//+MISSILE
    DamageType "Wraithverge"
	States
	{
    Spawn:
      SPIR PPPP 3 bright A_SpawnItemEx("HolyMissilePuff")
	  TNT1 A 0 A_Explode(128,128,0)
