    //Renderstyle Translucent
    Speed 20 // Previously 12
    //Alpha 0.5
    Radius 10
    Height 6
	Damage 5
	PROJECTILE
    +RIPPER
    +SEEKERMISSILE
    +FOILINVUL
    +SKYEXPLODE
    +NOEXPLODEFLOOR
    +CANBLAST
    +EXTREMEDEATH
    +BRIGHT
	//+SKULLFLY
	+HEXENBOUNCE
	+LOOKALLAROUND
