actor NashgoreMode : Boolean {}

actor SamsaraBloodyHellBlood : Blood
{
    Game Doom
    States
    {
    Spawn:
         TNT1 A 0
        BLUD C 4
                BLUD C 4 A_SpawnItemEx("Switchable_FlyingBlood",0,0,0,random(-350,350)/100.00,random(-350,350)/100.00,random(500,1000)/100.00,random(-180,180),33) //A_SpawnDebris("Switchable_FlyingBlood",1)
        BLUD BA 8
        stop
    }
}


actor Switchable_FlyingBlood
{
    Game Doom
    Scale 0.75
    Health 1
    Radius 8
    Height 1
    mass 1
        +CORPSE
        -SOLID
        +CANNOTPUSH
        +DONTSPLASH
        +NOTELEPORT
        +NOBLOCKMAP
        +CLIENTSIDEONLY
    states
    {
    Spawn:
         TNT1 A 1
                TNT1 A 1 A_JumpIf(ACS_ExecuteWithResult(SAMSARA_DECORATE,30) == 1, "SpawnNashgore")
                stop
        SpawnNashgore:
         TNT1 A 0 A_GiveInventory("NashgoreMode",1)
        FBLD AABBCCDD 2 A_SpawnItem("Nashgore_FlyingBloodTrail",0,0,0,129)
        loop
    Crash:
        TNT1 A 1 A_SpawnItem("NashGore_BloodSpot",0,0,0,129)
        stop
    }
}

actor NashGore_BloodSpot
{
    game Doom
    radius 12
    height 2
    mass 1
        +CANNOTPUSH
        +DONTSPLASH
        +NOTELEPORT
        -NOBLOCKMAP
        -NOGRAVITY
        +CLIENTSIDEONLY
    states
    {
    Spawn:
        TNT1 A 0
        TNT1 A 0 A_PlaySound("flemsplat")
        TNT1 A 0 A_Jump(255,"Death1","Death2","Death3","Death4")
    Death1:
        BSPT A 2100
                TNT1 A 0 A_JumpIf(ACS_ExecuteWithResult(SAMSARA_DECORATE,31) == 1, "Death1")
         BSPT A 10
        stop
    Death2:
        BSPT B 2100
                TNT1 A 0 A_JumpIf(ACS_ExecuteWithResult(SAMSARA_DECORATE,31) == 1, "Death2")
         BSPT B 10
        stop
    Death3:
        BSPT C 2100
                TNT1 A 0 A_JumpIf(ACS_ExecuteWithResult(SAMSARA_DECORATE,31) == 1, "Death3")
         BSPT C 10
        stop
    Death4:
        BSPT D 2100
                TNT1 A 0 A_JumpIf(ACS_ExecuteWithResult(SAMSARA_DECORATE,31) == 1, "Death4")
         BSPT D 10
        stop
    }
}

// Blood trails spawned by FlyingBlood
actor Nashgore_FlyingBloodTrail
{
    Game Doom
    Scale 0.70
    Mass 1
        +CANNOTPUSH
        +DONTSPLASH
        +LOWGRAVITY
        +NOTELEPORT
        +NOBLOCKMAP
        +CLIENTSIDEONLY
    States
    {
    Spawn:
        BTRL A 4
        BTRL B 4
        BTRL C 4
        BTRL D 4
        stop
    }
}

