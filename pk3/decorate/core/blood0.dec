actor RainbowSparkleSound : RainbowSparkles
{
    States
        {
        Spawn:
         TNT1 A 0
                TNT1 A 0 A_Jump(128,2)
                TNT1 A 0 A_PlaySound("happy/sparkle")
                TNT1 A 0
        TNT1 A 0 A_Jump(256,"Spawn1","Spawn2","Spawn3","Spawn4","Spawn5","Spawn6")
        stop
