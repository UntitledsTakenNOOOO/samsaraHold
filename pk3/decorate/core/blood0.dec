        +NOINTERACTION
        +BRIGHT
        +RANDOMIZE
        States
        {
      Spawn:
        TNT1 A 0
        TNT1 A 0 A_Jump(256,"Spawn1","Spawn2","Spawn3","Spawn4","Spawn5","Spawn6")
        stop
      Spawn1:
        RPK1 ABCDE 4
        stop
      Spawn2:
